{
  "name": "log-streaming-socketio",
  "version": "1.0.0",
  "description": "Live log streaming with Node, Express, and Socket.IO",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"cd client && npm start\" \"wait-on http://localhost:3000 http://localhost:3001 && electron .\"",
    "build": "cd client && npm run build",
    "electron-dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "generate-unique-id": "^2.0.3",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.simplyservers.app",
    "productName": "SimplyServers",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app.js",
      "electron.js",
      "client/build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
